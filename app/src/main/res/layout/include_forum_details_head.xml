<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_wight">

    <TextView
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:padding="@dimen/x15"
        android:text="这个夹不道子怎弄？" />

    <LinearLayout
        style="@style/linStyle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_iv_forum_detail_head"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/x64"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x24"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/linStyle"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_skill_detail_tv_name"
                        style="@style/textTitle"
                        android:layout_width="match_parent"
                        android:text="金刚蛋"
                        android:textSize="@dimen/tv_28px" />

                    <TextView
                        android:id="@+id/item_skill_detail_tv_time"
                        style="@style/textMin"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/x10"
                        android:text="家里蹲大学 长城贴瓷砖系" />

                </LinearLayout>

                <TextView
                    style="@style/textMin"
                    android:text="今天 12:00" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_forum_details_content"
        style="@style/linStyle"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:padding="@dimen/x24"
        android:text="评论区"
        android:textSize="@dimen/tv_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

</LinearLayout>
