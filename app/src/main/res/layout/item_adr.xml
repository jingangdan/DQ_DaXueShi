<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.dq.daxueshi.view.SwipeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x5">

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="55dp"
                android:background="@color/textColor3" />

            <LinearLayout
                style="@style/linStyle"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="金刚蛋"
                            android:textSize="@dimen/tv_24px" />

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:text="电话：123456"
                            android:textSize="@dimen/tv_24px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20">

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="[默认]"
                            android:textColor="@color/textColor3"
                            android:textSize="@dimen/tv_24px" />

                        <TextView
                            style="@style/textMin"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:text="地址：公共关系协会"
                            android:textSize="@dimen/tv_24px" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivItemAdrUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/view_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#FF723E"
                android:text="编辑" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/textColor3"
                android:text="删除" />

        </LinearLayout>

    </com.dq.daxueshi.view.SwipeView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/view_color" />

</LinearLayout>